FROM quay.io/lnxjedi/gopherbot-base-theia:latest

ARG username=robot
ARG userid=1000
ARG nonprivuser=nobody

ARG installdir=/opt
ARG homedir=/home/robot

RUN cd / && \
  git clone https://github.com/lnxjedi/gopherbot.git build && \
  cd build && \
  make dist && \
  cd ${installdir} && \
  tar xzf /build/gopherbot-linux-amd64.tar.gz && \
  rm -rf /build && \
  chown ${nonprivuser}:${username} ${installdir}/gopherbot/gopherbot && \
  chmod u+s ${installdir}/gopherbot/gopherbot && \
  ln -s ${installdir}/gopherbot/gopherbot ${HOME}/gopherbot && \
  ln -s ${installdir} ${HOME}/defaults && \
  chown -R ${USER}:${USER} ${HOME} && \
  chmod go+rx ${HOME}

WORKDIR ${HOME}
USER ${userid}:${USER}

ENTRYPOINT [ "/opt/gopherbot/gopherbot" , "-plainlog" ]
